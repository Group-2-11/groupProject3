	</footer> <!-- end footer -->




	<script>
		function toggleSections() {
			var accountDetails = document.getElementById('accountDetails');

			if (accountDetails.style.display === 'none') {
				accountDetails.style.display = 'block';
				rides.style.display = 'none';
			}
		}

		function toggleRides() {
			let rides = document.getElementById('rides');

			if (rides.style.display === 'none') {
				rides.style.display = 'block';
				accountDetails.style.display = 'none';
			}
		}


	</script>

